@model IEnumerable<Genre>
@{
    ViewData["Title"] = "List of Genres";
}
<body style="background-image: url('https://th.bing.com/th/id/R.49ca4e93141431efa1c264759f6575b3?rik=71yxasJZc2b3Kg&pid=ImgRaw&r=0');
background-repeat: no-repeat;
            background-size: cover;">


<div class="row" style="background-color: lightcyan ;">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.GenreName)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.GenreName)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Edit</i></a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="text-white" style="position: fixed; right: 100px; bottom: 100px;">
    <a asp-controller="Genres" asp-action="Create" class="btn btn-success">Add New </a>
</div>
</body>
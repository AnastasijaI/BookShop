        //     output.src = $("#FrontPage").val();
        // })
        // $("#FrontPage").on("change", function () {
        //     var output = document.getElementById('FrontPage');
        //     output.src = $(this).val();
        $(function () {
            $("#FrontPage").on("change", function () {
                var url = this.value;
                $("#FrontPage").attr("src", url);
            });
        });
        // })
    </script>
}
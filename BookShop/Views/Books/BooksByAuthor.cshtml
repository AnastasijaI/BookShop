@model IEnumerable<BookShop.Models.Book>

@{
    ViewData["Title"] = "Books by Author";
}
<body style="
      background-image: url('https://p16-flow-sign-va.ciciai.com/ocean-cloud-tos-us/63092a680a28409a911b894a16b97d39.png~tplv-6bxrjdptv7-image.png?rk3s=18ea6f23&x-expires=1747223458&x-signature=pgXzJcmOT5PvluaMW6zNe1lD4Vk%3D');
      background-size: cover;
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-position: center;">
<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Year Published</th>
            <th>Genre</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>
                    <img src="@book.FrontPage" alt="Book Image" style="max-height: 100px; max-width: 100px;" />
                </td>
                <td>@book.Title</td>
                <td>@book.YearPublished</td>
                <td>
                    @foreach (var genre in book.BookGenres)
                    {
                        <span>@genre.Genre.GenreName</span>
                        <br />
                    }
                </td>
                <td>@book.Description</td>
                <td>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@book.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</body>